<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Book Selection Spinner -->
    <Spinner
        android:id="@+id/spinnerBooks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <!-- Chapter Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvChapterLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chapter_prefix"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvCurrentChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chapter_suffix"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnPrevChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prev_chapter"
            android:layout_marginStart="16dp"
            style="?attr/materialButtonOutlinedStyle" />

        <Button
            android:id="@+id/btnNextChapter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next_chapter"
            android:layout_marginStart="8dp"
            style="?attr/materialButtonOutlinedStyle" />

    </LinearLayout>

    <!-- Options -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/cbShowEnglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chinese_english"
            android:checked="true" />

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/search_hint"
            android:layout_marginStart="16dp" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Content Area -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>